<!-- Daftar Berita -->
<div class="container mt-5">
    <h2><%= news.title %></h2>
    <div class="row">
        <div class="col-md-12">
            <img src="<%= news.cover %>" width="75%" class="m-1" alt="Gambar Berita" />
            <p class="mt-1"><%- news.content %></p>
            <a href="/" style="margin-bottom: 100px" class="btn btn-primary">Back</a>
        </div>
    </div>

    <!-- komentar Start -->
    <section id="comments" style="margin-bottom: 100px">
        <h3>Komentar</h3>
        <hr />
        <% if (news.comments) { %>
        <div id="comment-list">
            <% news.comments.forEach(comment => { %>
                <div class="row">
                    <div class="col-md-10">
                        <div class="comment-item">
                            <h5><%= comment.name %></h5>
                            <p><%= comment.comment %></p>
                        </div>
                    </div>
                    <div class="col-md-2 d-flex align-items-center justify-content-center">
                        <button type="button" class="btn btn-danger" id="delete-comment" data-id-comment = "<%= comment.id %>">Delete</button>
                    </div>
                </div>
            <hr />
            <% }) %>
        </div>
        <% } %>
        <!-- komentar End -->

        <!-- add komentar Start -->
        <form id="comment-form">
            <div class="form-group">
                <label for="name">Nama:</label>
                <input type="text" class="form-control" id="name" name="name" required />
            </div>
            <div class="form-group">
                <label for="comment">Komentar:</label>
                <textarea class="form-control" name="comment" id="comment" rows="4" required></textarea>
            </div>
            <input type="hidden" id="newsId" name="newsId" value="<%= news.id %>" />
            <button type="submit" class="btn btn-primary">Kirim Komentar</button>
        </form>
    </section>
</div>

<!-- add komentar End -->
